---
import fs from "node:fs";
import ClassLayout from "../../layouts/classLayout.astro";
import "../../styles/style.css"

export async function getStaticPaths() {
    const paths = fs.readdirSync('../../../data/backgrounds/*.json')
    return paths.map(name => { params: {slug: name} });
};

let response = await import(`../../../data/classes/${Astro.params.slug}.json`).then((res) => res.default);
let data = await response;
---
<ClassLayout data={data}/>
