---
import toCamelCase from "../../utils/toCamelCase.js"
import ClassLayout from "../../layouts/classLayout.astro";
import "../../styles/style.css"

export async function getStaticPaths() {
    const paths = await Astro.glob('../../../data/classes/*.json').then((res) => {
        return res.map((path) => {
            return {
                // get path name from file
                params: {
                    slug: toCamelCase(path.name)
                }
            }
        })
    })
};

let response = await import(`../../../data/classes/${Astro.params.slug}.json`).then((res) => res.default);
let data = await response;
---
<ClassLayout data={data}/>