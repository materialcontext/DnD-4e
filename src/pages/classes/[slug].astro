---
import getDataFile from "../../utils/getDataFile.js";
import getFileNames from "../../utils/getFileNames.js";
import ClassLayout from "../../layouts/classLayout.astro";
import "../../styles/style.css"

export async function getStaticPaths() {
    let paths = getFileNames('classes');
    return paths.map((path) => {
        return { params: { slug: path.replace('.json', '') } };
    });
};

let data = JSON.parse(getDataFile('classes', `${Astro.params.slug}.json`));
---
<ClassLayout data={data}/>
