---
import getFileNames from "../../utils/getFileNames.js";
import getDataFile from "../../utils/getDataFile.js";
import ClassLayout from "../../layouts/bgLayout.astro";

export async function getStaticPaths() {
    let paths = getFileNames('backgrounds');
    return paths.map((path) => {
        return { params: { slug: path.replace('.json', '') } };
    });
};

let data = JSON.parse(getDataFile('backgrounds', `${Astro.params.slug}.json`));

---
<ClassLayout data={data}/>
