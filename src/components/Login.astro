---
import Logo from '../components/Logo.jsx'
---

<!-- Create an astro login page -->
<div class="w-[320px] p-6 flex flex-col justify-center">
  <div class="logo flex justify-center">
    <Logo />
  </div>
  <div class="mt-5">
    <form role="form" action="/auth" method="post">
      <fieldset>
        <div class="input-group mb-5">
          <label class="mb-1" for="email">email</label>
          <input
            class="form-control px-2"
            name="email"
            type="email"
            autofocus
          />
        </div>
        <div class="input-group mb-5">
          <label class="mb-1" for="password">Password</label>
          <input
            class="form-control px-2"
            name="password"
            type="password"
            value=""
          />
        </div>
        <input
          type="submit"
          name="login"
          value="Login"
          class="w-full button button-sm shadow bg-pgl-red text-ivory"
        />
      </fieldset>
    </form>
  </div>
</div>
